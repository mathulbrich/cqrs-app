{
  "name": "cqrs-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "db:create": "./scripts/db-create.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@google-cloud/tasks": "^2.6.0",
    "@grpc/grpc-js": "^1.6.7",
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/cqrs": "^8.0.4",
    "@nestjs/mongoose": "^9.1.0",
    "@nestjs/platform-express": "^8.4.5",
    "body-parser": "^1.20.0",
    "helmet": "^5.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^6.3.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "zod": "^3.15.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.1.0",
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.5",
    "@types/async": "^3.2.13",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "async": "^3.2.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^3.1.4",
    "get-port": "^5.1.1",
    "jest": "^28.1.0",
    "module-alias": "^2.2.2",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^28.0.2",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 83.33,
        "functions": 66.66,
        "lines": 85.2,
        "statements": 87.32
      }
    },
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@app": "dist/src",
    "@test": "dist/test"
  },
  "engines": {
    "node": "^16.14.2"
  }
}
