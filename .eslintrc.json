{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@app", "./src"]
        ],
        "extensions": [".ts", ".js", ".json"]
      }
    }
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": false }],
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/no-floating-promises": "error",
    "no-restricted-imports": ["error", {
      "patterns": [
        {
          "group": ["./*", "../*", "*/../*"],
          "message": "relative import is not allowed"
        }
      ]
    }],
    "import/no-restricted-paths": ["error", {
      "zones": [
        {
          "target": "./src/**/domain/**/*",
          "from": "./src/**/application/**/*",
          "message": "import from application layer is not allowed in domain layer"
        },
        {
          "target": "./src/**/domain/**/*",
          "from": "./src/**/infrastructure/**/*",
          "message": "import from infrastructure layer is not allowed in domain layer"
        },
        {
          "target": "./src/**/infrastructure/**/*",
          "from": "./src/**/application/**/*",
          "message": "import from application layer is not allowed in infrastructure layer"
        }
      ]
    }],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object"],
        "pathGroups": [
          {
            "pattern": "@app/**",
            "group": "parent"
          },
          {
            "pattern": "@test/**",
            "group": "parent"
          },
          {
            "pattern": "@migrations/**",
            "group": "parent"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}